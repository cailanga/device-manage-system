<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cailang.sys.mapper.DictionaryitemMapper">
    <!--保存对象-->
    <insert id="insert" parameterType="DictionaryItem" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_sys_dictionaryitem(`title`,
                                         `value`,
                                         `sequence`,
                                         `intro`,
                                         `parent_id`)
        values (#{title},
                #{value},
                #{sequence},
                #{intro},
                #{parent.id})
    </insert>
    <!--删除对象-->
    <delete id="deleteById" parameterType="long">
        delete
        from t_sys_dictionaryitem
        where id = #{id}
    </delete>

    <!--更新对象-->
    <update id="update" parameterType="Dictionaryitem">
        update t_sys_dictionaryitem
        set `title`     =#{title},
            `value`     =#{value},
            `sequence`  =#{sequence},
            `intro`     =#{intro},
            `parent_id` =#{parent.id}
        where id = #{id}
    </update>
    <!--加载对象-->
    <select id="selectById" resultMap="BaseResultMap" parameterType="long">
        select
        <include refid="Base_Column_List"></include>
        from t_sys_dictionaryitem c
        left join t_sys_dictionary p on c.parent_id = p.id where id = #{id}
    </select>
    <!--加载所有对象-->
    <select id="selectAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"></include>
        from t_sys_dictionaryitem c
        left join t_sys_dictionary p on c.parent_id = p.id
    </select>
    <!--//查询总数=参数（查询对象），返回值：long-->
    <select id="queryTotal" parameterType="DictionaryitemQuery" resultType="long">
        select count(*) from t_sys_dictionaryitem c
        left join t_sys_dictionary p on c.parent_id = p.id
        <include refid="whereSql"/>
    </select>
    <!--//查询当前页数据=参数（查询对象），返回值:List-->
    <select id="queryPageList" parameterType="DictionaryitemQuery" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"></include>
        from t_sys_dictionaryitem c
        left join t_sys_dictionary p on c.parent_id = p.id
        <include refid="whereSql"/>
        limit #{start},#{pageSize}
    </select>
    <select id="selectBySn" resultType="cn.cailang.sys.domain.DictionaryItem">
        select * from t_sys_dictionaryitem di
        left join t_sys_dictionary d on di.parent_id = d.id
        where d.sn = #{sn}
    </select>


    <sql id="whereSql">
        <where>
            <if test="keyword!=null and keyword!=''">
                and (c.title like concat('%',#{keyword},'%') or c.intro like concat('%',#{keyword},'%'))
            </if>
        </where>
    </sql>

    <!--//批量删除-->
    <delete id="batchDelete" parameterType="arraylist">
        delete from t_sys_dictionaryitem where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <delete id="deleteByPid">
        delete
        from t_sys_dictionaryitem where parent_id = #{pid}
    </delete>
    <delete id="deleteByPids">
        delete from t_sys_dictionaryitem where parent_id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.cailang.sys.domain.DictionaryItem">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="value" property="value"/>
        <result column="sequence" property="sequence"/>
        <result column="intro" property="intro"/>
        <result column="parent_id" property="parentId"/>
        <association property="parent" javaType="Dictionary">
            <id column="pid" property="id"/>
            <result column="ptitle" property="title"/>
        </association>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        c.id,
        c.title,
        c.value,
        c.sequence,
        c.intro,
        c.parent_id AS parentId,
        p.id pid,
        p.title ptitle
    </sql>

</mapper>
